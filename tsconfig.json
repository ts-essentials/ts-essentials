{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2015", "esnext.asynciterable"],
    "sourceMap": true,
    "declaration": true
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules"]
}
